<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:background="#E1CECE"
    >
    <ImageView
        android:id="@+id/iv_item"
        tools:src="@drawable/ic_launcher_background"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/tvCoinName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item"
        app:layout_constraintEnd_toStartOf="@id/tvMarketCap"
        app:layout_constraintBottom_toTopOf="@id/tvCoinPrice"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Bitcoin"
        />
    <TextView
        android:id="@+id/tvCoinPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="$52000"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvCoinVolume"
        app:layout_constraintStart_toEndOf="@id/iv_item"
        app:layout_constraintTop_toBottomOf="@id/tvCoinName"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvMarketCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$1,300,000,000"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tvCoinVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$200,000,000"
        app:layout_constraintBottom_toTopOf="@id/tvCoinVolume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMarketCap"
        />
</androidx.constraintlayout.widget.ConstraintLayout>